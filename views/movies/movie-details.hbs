
<h2>Movie Details</h2>

<p>Title:{{foundMovie.title}}</p>
<p>Genre:{{foundMovie.genre}}</p>
<p>Plot:{{foundMovie.plot}}</p>

<p>Cast:</p>
<ul>
{{#each foundMovie.cast}}
<li>Name: {{this.name}}</li>
<li>Occupation: {{this.occupation}}</li>
<li>Name: {{this.catchPhrase}}</li>
{{/each}}

<form action="/movies/:id/delete" method="post">
        <button type="submit">Delete</button>
    </form>

<form action="/movies/:id/edit" method="post">
        <button type="submit">Edit</button>
    </form>
 
 
 
